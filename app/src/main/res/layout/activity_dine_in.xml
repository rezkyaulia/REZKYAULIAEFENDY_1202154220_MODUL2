<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.rezky.rezky_1202154220_modul2.DineIn">

    <include layout="@layout/appbar_layout" android:id="@+id/appbar_dinein"/>

    <TextView
        android:id="@+id/detailc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detail Customer"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:layout_marginTop="30dp"
        android:layout_gravity="center">
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Nama"/>
    </android.support.design.widget.TextInputLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_meja"
            android:textSize="15sp"/>
        <Spinner
            android:id="@+id/nomeja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </Spinner>
    </LinearLayout>
    <Button
        android:id="@+id/pilihpesanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pilih_pesanan"
        android:onClick="pilihpesanan"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"/>
</LinearLayout>
